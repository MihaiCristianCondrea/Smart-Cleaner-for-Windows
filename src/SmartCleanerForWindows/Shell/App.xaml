<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="SmartCleanerForWindows.Shell.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <controls:XamlControlsResources />
            </ResourceDictionary.MergedDictionaries>

            <!-- Provide legacy brush aliases used by the views to avoid runtime XAML resource failures. -->
            <SolidColorBrush
                x:Key="SystemControlForegroundBaseMediumBrush"
                Color="{ThemeResource TextFillColorSecondary}" />
            <SolidColorBrush
                x:Key="ApplicationPageBackgroundThemeBrush"
                Color="{ThemeResource LayerFillColorDefault}" />

            <!-- Local resources used throughout the views. -->
            <SolidColorBrush
                x:Key="HeroCardOverlayBrush"
                Opacity="0.2"
                Color="{ThemeResource SolidBackgroundFillColorBase}" />

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
