<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="SmartCleanerForWindows.Shell.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:SmartCleanerForWindows.Common.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="ms-appx:///Shell/Themes/DesignTokens.xaml" />
                <ResourceDictionary Source="ms-appx:///Shell/Themes/TextResources.xaml" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <SolidColorBrush x:Key="WindowCaptionBackground" Color="Transparent" />
            <SolidColorBrush x:Key="WindowCaptionBackgroundDisabled" Color="Transparent" />
            <SolidColorBrush x:Key="WindowCaptionForeground" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="WindowCaptionForegroundDisabled" Color="#66FFFFFF" />
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="WindowCaptionBackground" Color="Transparent" />
                    <SolidColorBrush x:Key="WindowCaptionBackgroundDisabled" Color="Transparent" />
                    <SolidColorBrush x:Key="WindowCaptionForeground" Color="#000000" />
                    <SolidColorBrush x:Key="WindowCaptionForegroundDisabled" Color="#66000000" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="WindowCaptionBackground" Color="Transparent" />
                    <SolidColorBrush x:Key="WindowCaptionBackgroundDisabled" Color="Transparent" />
                    <SolidColorBrush x:Key="WindowCaptionForeground" Color="#FFFFFFFF" />
                    <SolidColorBrush x:Key="WindowCaptionForegroundDisabled" Color="#66FFFFFF" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
