<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--
        WinUI 3 does not ship TextFillColor* brushes when using custom themes.
        Define lightweight fallbacks that mirror the Fluent design tokens so controls using
        {ThemeResource TextFillColorSecondaryBrush} keep working even if a newer SDK is not present.
    -->
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#1F1F1F" />
            <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="#5E5E5E" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#1F1F1F" />
            <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="#5E5E5E" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#F3F3F3" />
            <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="#C8C8C8" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
