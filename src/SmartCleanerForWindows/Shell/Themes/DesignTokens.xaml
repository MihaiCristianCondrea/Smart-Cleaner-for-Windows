<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Fluent spacing ramp (4px base with specific additions) -->
    <x:Double x:Key="Spacing.SizeNone">0</x:Double>
    <x:Double x:Key="Spacing.Size20">2</x:Double>
    <x:Double x:Key="Spacing.Size40">4</x:Double>
    <x:Double x:Key="Spacing.Size60">6</x:Double>
    <x:Double x:Key="Spacing.Size80">8</x:Double>
    <x:Double x:Key="Spacing.Size100">10</x:Double>
    <x:Double x:Key="Spacing.Size120">12</x:Double>
    <x:Double x:Key="Spacing.Size160">16</x:Double>
    <x:Double x:Key="Spacing.Size200">20</x:Double>
    <x:Double x:Key="Spacing.Size240">24</x:Double>
    <x:Double x:Key="Spacing.Size280">28</x:Double>
    <x:Double x:Key="Spacing.Size320">32</x:Double>
    <x:Double x:Key="Spacing.Size360">36</x:Double>
    <x:Double x:Key="Spacing.Size400">40</x:Double>
    <x:Double x:Key="Spacing.Size480">48</x:Double>
    <x:Double x:Key="Spacing.Size520">52</x:Double>
    <x:Double x:Key="Spacing.Size560">56</x:Double>

    <!-- Layout paddings derived from the spacing ramp -->
    <Thickness x:Key="Padding.Page">32</Thickness>
    <Thickness x:Key="Padding.Card">24</Thickness>
    <Thickness x:Key="Padding.Hero">28</Thickness>

    <!-- Fluent shared and brand color tokens -->
    <Color x:Key="Color.BrandPrimary">#0067C0</Color>
    <Color x:Key="Color.BrandSecondary">#2899F5</Color>
    <Color x:Key="Color.BrandOverlay">#1AFFFFFF</Color>
    <Color x:Key="Color.SharedPositive">#107C10</Color>
    <Color x:Key="Color.SharedCaution">#FFB900</Color>
    <Color x:Key="Color.SharedCritical">#D83B01</Color>

    <SolidColorBrush x:Key="Brush.BrandPrimary" Color="{StaticResource Color.BrandPrimary}" />
    <SolidColorBrush x:Key="Brush.BrandSecondary" Color="{StaticResource Color.BrandSecondary}" />
    <SolidColorBrush x:Key="Brush.SharedPositive" Color="{StaticResource Color.SharedPositive}" />
    <SolidColorBrush x:Key="Brush.SharedCaution" Color="{StaticResource Color.SharedCaution}" />
    <SolidColorBrush x:Key="Brush.SharedCritical" Color="{StaticResource Color.SharedCritical}" />
    <SolidColorBrush x:Key="Brush.BrandOverlay" Color="{StaticResource Color.BrandOverlay}" />

    <!-- Hero gradients inspired by Fluent guidance -->
    <LinearGradientBrush x:Key="Brush.Hero.Neutral" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Color.BrandPrimary}" Offset="0" />
        <GradientStop Color="{StaticResource Color.BrandSecondary}" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Brush.Hero.Positive" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0F7B0F" Offset="0" />
        <GradientStop Color="#5BB318" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Brush.Hero.Warning" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF8C00" Offset="0" />
        <GradientStop Color="#FFC83D" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Brush.Hero.Critical" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#D13438" Offset="0" />
        <GradientStop Color="#F1707B" Offset="1" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="HeroCardOverlayBrush" Color="#1FFFFFFF" />

    <Style TargetType="Border" x:Key="CardStyle">
        <Setter Property="Background" Value="{ThemeResource LayerFillColorDefaultBrush}" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="Padding" Value="{StaticResource Padding.Card}" />
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>
</ResourceDictionary>
