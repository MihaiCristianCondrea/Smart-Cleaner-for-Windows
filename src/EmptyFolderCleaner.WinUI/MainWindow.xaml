<Window
    x:Class="EmptyFolderCleaner.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Title="Empty Folder Cleaner"
    Width="840"
    Height="600">
    <muxc:NavigationView IsSettingsVisible="False" PaneDisplayMode="LeftMinimal">
        <Grid Padding="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBox x:Name="RootPathBox" Width="520" PlaceholderText="Select a root folderâ€¦" />
                <Button x:Name="BrowseBtn" Content="Browse" Click="OnBrowse" />
                <Button x:Name="PreviewBtn" Content="Preview" Click="OnPreview" />
                <Button x:Name="DeleteBtn" Content="Delete" Style="{StaticResource AccentButtonStyle}" IsEnabled="False" Click="OnDelete" />
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                <CheckBox x:Name="RecycleChk" IsChecked="True" Content="Send to Recycle Bin" />
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <TextBlock Text="Depth limit:" VerticalAlignment="Center" />
                    <NumberBox x:Name="DepthBox" Minimum="0" Maximum="999" Value="0" Width="90" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <TextBlock Text="Exclusions (semicolon-separated):" VerticalAlignment="Center" />
                    <TextBox x:Name="ExcludeBox" Width="360" PlaceholderText=".git; build/*; node_modules" />
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                <ProgressBar x:Name="Progress" Width="280" Visibility="Collapsed" IsIndeterminate="True" />
                <Button x:Name="CancelBtn" Content="Cancel" Click="OnCancel" Visibility="Collapsed" />
                <muxc:InfoBar x:Name="Info" IsOpen="False" />
            </StackPanel>

            <ListView x:Name="Candidates" Grid.Row="3" Margin="0,8,0,0" SelectionMode="None" IsItemClickEnabled="False">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <TextBlock Text="{x:Bind}" TextTrimming="CharacterEllipsis" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </muxc:NavigationView>
</Window>
